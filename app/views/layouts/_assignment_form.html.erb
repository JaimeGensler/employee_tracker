<%= render "layouts/errors", :object => @assignment %>

<%= form_for [@project, @assignment] do |f| %>
    <%= f.label :project_id %>
    <%=
        f.collection_select(
            :project_id,
            Project.order(:name),
            :id,
            :name,
            prompt: true,
            include_blank: true
        )
    %>

    <%= f.label :employee_id %>
    <%=
        f.collection_select(
            :employee_id,
            Employee.order(:name),
            :id,
            :name,
            prompt: true,
            include_blank: true
        )
    %>

    <%= f.submit %>
<% end %>
